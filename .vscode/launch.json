{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/backend/KalshiSignals.Web/bin/Debug/net10.0/KalshiSignals.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/backend/KalshiSignals.Web",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/backend/KalshiSignals.Web/Views"
      }
    }
  ]
}

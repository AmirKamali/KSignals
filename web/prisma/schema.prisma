generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Signal {
  id          String   @id @default(cuid())
  ticker      String
  prediction  String   // "YES" or "NO"
  confidence  Float
  reasoning   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

@using KSignals.DTO
@model ClientEvent
<a class="card" href="/marketDetails?EventTicker=@Model.EventTicker">
    <div class="card-header">
        <span class="category">Event</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M7 17L17 7"></path>
            <path d="M7 7h10v10"></path>
        </svg>
    </div>

    <h3 class="card-title">
        @TitleFormatter.FormatTitle(Model.Title)
    </h3>

    <div class="stats">
        <div class="stat">
            <span class="label">Yes Price</span>
            <span class="value">@Model.YesBid.ToString("0.#")&cent;</span>
        </div>
        <div class="stat">
            <span class="label">Volume</span>
            <span class="value">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="margin-right: 4px;">
                    <line x1="18" y1="20" x2="18" y2="10"></line>
                    <line x1="12" y1="20" x2="12" y2="4"></line>
                    <line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
                @Model.Volume.ToString("N0")
            </span>
        </div>
    </div>

    <div class="progressContainer">
        <div class="progressBar" style="width: @Model.YesBid.ToString("0.#")%"></div>
    </div>
</a>
